// file_ops.c
// Demonstrates create (open), delete (unlink), rename, copy (read/write)

#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <string.h>

int copy_file(const char *src, const char *dst) {
    int s = open(src, O_RDONLY);
    if (s < 0) { perror("open src"); return -1; }
    int d = open(dst, O_CREAT | O_WRONLY | O_TRUNC, 0644);
    if (d < 0) { perror("open dst"); close(s); return -1; }
    char buf[4096];
    ssize_t n;
    while ((n = read(s, buf, sizeof(buf))) > 0) {
        if (write(d, buf, n) != n) { perror("write"); close(s); close(d); return -1; }
    }
    close(s); close(d);
    return 0;
}

int main() {
    const char *f1 = "file_ops_src.txt";
    int fd = open(f1, O_CREAT | O_WRONLY | O_TRUNC, 0644);
    write(fd, "file ops demo\n", 14);
    close(fd);
    printf("Created %s\n", f1);

    const char *f2 = "file_ops_copy.txt";
    if (copy_file(f1, f2) == 0) printf("Copied %s -> %s\n", f1, f2);

    const char *f3 = "file_ops_renamed.txt";
    if (rename(f2, f3) == 0) printf("Renamed %s -> %s\n", f2, f3);

    if (unlink(f1) == 0) printf("Deleted %s\n", f1);

    // cleanup
    // unlink(f3);
    return 0;
}
