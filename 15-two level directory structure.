#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#define MAX_USERS 10
#define MAX_FILES 20
#define MAX_NAME 50

typedef struct {
    char filename[MAX_FILES][MAX_NAME];
    int fileCount;
} SubDirectory;

typedef struct {
    char username[MAX_NAME];
    SubDirectory subdir;
} User;

User users[MAX_USERS];
int userCount = 0;

// Create a new user
void createUser() {
    if (userCount >= MAX_USERS) {
        printf("Maximum users reached!\n");
        return;
    }

    char name[MAX_NAME];
    printf("Enter username: ");
    scanf("%s", name);

    // Check if user already exists
    for (int i = 0; i < userCount; i++) {
        if (strcmp(users[i].username, name) == 0) {
            printf("User already exists!\n");
            return;
        }
    }

    strcpy(users[userCount].username, name);
    users[userCount].subdir.fileCount = 0;
    userCount++;
    printf("User '%s' created successfully.\n", name);
}

// Create file under a user
void createFile() {
    char name[MAX_NAME];
    printf("Enter username: ");
    scanf("%s", name);

    // Find user
    int idx = -1;
    for (int i = 0; i < userCount; i++) {
        if (strcmp(users[i].username, name) == 0) {
            idx = i;
            break;
        }
    }

    if (idx == -1) {
        printf("User not found!\n");
        return;
    }

    SubDirectory *subdir = &users[idx].subdir;
    if (subdir->fileCount >= MAX_FILES) {
        printf("Maximum files for this user reached!\n");
        return;
    }

    char filename[MAX_NAME];
    printf("Enter filename: ");
    scanf("%s", filename);

    // Check if file already exists
    for (int i = 0; i < subdir->fileCount; i++) {
        if (strcmp(subdir->filename[i], filename) == 0) {
            printf("File already exists!\n");
            return;
        }
    }

    strcpy(subdir->filename[subdir->fileCount], filename);
    subdir->fileCount++;
    printf("File '%s' created for user '%s'.\n", filename, name);
}

// Delete file
void deleteFile() {
    char name[MAX_NAME];
    printf("Enter username: ");
    scanf("%s", name);

    int idx = -1;
    for (int i = 0; i < userCount; i++) {
        if (strcmp(users[i].username, name) == 0) {
            idx = i;
            break;
        }
    }

    if (idx == -1) {
        printf("User not found!\n");
        return;
    }

    SubDirectory *subdir = &users[idx].subdir;
    char filename[MAX_NAME];
    printf("Enter filename to delete: ");
    scanf("%s", filename);

    int found = 0;
    for (int i = 0; i < subdir->fileCount; i++) {
        if (strcmp(subdir->filename[i], filename) == 0) {
            // Shift remaining files
            for (int j = i; j < subdir->fileCount - 1; j++) {
                strcpy(subdir->filename[j], subdir->filename[j + 1]);
            }
            subdir->fileCount--;
            found = 1;
            printf("File '%s' deleted for user '%s'.\n", filename, name);
            break;
        }
    }

    if (!found) printf("File not found!\n");
}

// Display files for a user
void displayFiles() {
    char name[MAX_NAME];
    printf("Enter username: ");
    scanf("%s", name);

    int idx = -1;
    for (int i = 0; i < userCount; i++) {
        if (strcmp(users[i].username, name) == 0) {
            idx = i;
            break;
        }
    }

    if (idx == -1) {
        printf("User not found!\n");
        return;
    }

    SubDirectory *subdir = &users[idx].subdir;
    if (subdir->fileCount == 0) {
        printf("No files for user '%s'.\n", name);
        return;
    }

    printf("Files for user '%s':\n", name);
    for (int i = 0; i < subdir->fileCount; i++) {
        printf("%s\n", subdir->filename[i]);
    }
}

// Search file for a user
void searchFile() {
    char name[MAX_NAME];
    printf("Enter username: ");
    scanf("%s", name);

    int idx = -1;
    for (int i = 0; i < userCount; i++) {
        if (strcmp(users[i].username, name) == 0) {
            idx = i;
            break;
        }
    }

    if (idx == -1) {
        printf("User not found!\n");
        return;
    }

    SubDirectory *subdir = &users[idx].subdir;
    char filename[MAX_NAME];
    printf("Enter filename to search: ");
    scanf("%s", filename);

    for (int i = 0; i < subdir->fileCount; i++) {
        if (strcmp(subdir->filename[i], filename) == 0) {
            printf("File '%s' found for user '%s'.\n", filename, name);
            return;
        }
    }
    printf("File '%s' not found for user '%s'.\n", filename, name);
}

int main() {
    int choice;

    while (1) {
        printf("\n--- Two Level Directory Structure ---\n");
        printf("1. Create User\n");
        printf("2. Create File\n");
        printf("3. Delete File\n");
        printf("4. Display Files of a User\n");
        printf("5. Search File\n");
        printf("6. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: createUser(); break;
            case 2: createFile(); break;
            case 3: deleteFile(); break;
            case 4: displayFiles(); break;
            case 5: searchFile(); break;
            case 6: exit(0);
            default: printf("Invalid choice! Try again.\n");
        }
    }

    return 0;
}
